<UserControl x:Class="TrainBookingApp.Views.Manager.PricingRuleManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TrainBookingApp.Views.Manager">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Pricing Rules List -->
        <Grid Grid.Column="0" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       Text="Pricing Rules" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            
            <!-- Search -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         Padding="5"
                         VerticalAlignment="Center"
                         ToolTip="Search by rule name or description"/>
                
                <Button Grid.Column="1" 
                        Content="Search" 
                        Command="{Binding SearchPricingRulesCommand}"
                        Width="80" 
                        Height="30"
                        Margin="5,0,0,0"/>
            </Grid>
            
            <!-- Filters -->
            <Grid Grid.Row="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ComboBox Grid.Column="0" 
                          ItemsSource="{Binding TrainTypes}"
                          SelectedItem="{Binding SelectedTrainTypeFilter}"
                          DisplayMemberPath="TypeName"
                          Height="30"
                          Margin="0,0,5,0"
                          ToolTip="Filter by train type"/>
                
                <ComboBox Grid.Column="1" 
                          ItemsSource="{Binding Routes}"
                          SelectedItem="{Binding SelectedRouteFilter}"
                          DisplayMemberPath="RouteName"
                          Height="30"
                          Margin="5,0,5,0"
                          ToolTip="Filter by route"/>
                
                <Button Grid.Column="2" 
                        Content="Test Price" 
                        Command="{Binding TestPriceCalculationCommand}"
                        Width="80" 
                        Height="30"
                        Margin="5,0,0,0"
                        ToolTip="Test price calculation with selected filters"/>
            </Grid>
            
            <!-- Pricing Rules DataGrid -->
            <DataGrid Grid.Row="3" 
                      ItemsSource="{Binding PricingRules}"
                      SelectedItem="{Binding SelectedPricingRule}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      SelectionChanged="PricingRuleDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Rule Name" Binding="{Binding RuleName}" Width="120"/>
                    <DataGridTextColumn Header="Price/Km" Binding="{Binding BasePricePerKm, StringFormat=C}" Width="80"/>
                    <DataGridTextColumn Header="Train Type" Binding="{Binding TrainType.TypeName}" Width="100"/>
                    <DataGridTextColumn Header="Route" Binding="{Binding Route.RouteName}" Width="120"/>
                    <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="60"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60"/>
                    <DataGridCheckBoxColumn Header="Round Trip" Binding="{Binding IsForRoundTrip}" Width="80"/>
                    <DataGridTextColumn Header="Effective From" Binding="{Binding EffectiveFromDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                    <DataGridTextColumn Header="Effective To" Binding="{Binding EffectiveToDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <!-- Pricing Rule Form -->
        <Grid Grid.Column="1" Margin="15,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       Text="Pricing Rule Details" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>
            
            <TextBlock Grid.Row="1" Text="Rule Name:" FontWeight="Bold"/>
            <TextBox Grid.Row="2" 
                     Text="{Binding NewRuleName, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" 
                     Margin="0,5,0,10"/>
            
            <TextBlock Grid.Row="3" Text="Description:" FontWeight="Bold"/>
            <TextBox Grid.Row="4" 
                     Text="{Binding NewDescription, UpdateSourceTrigger=PropertyChanged}"
                     Height="50" 
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,5,0,10"/>
            
            <TextBlock Grid.Row="5" Text="Base Price per Km:" FontWeight="Bold"/>
            <TextBox Grid.Row="6" 
                     Text="{Binding NewBasePricePerKm, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" 
                     Margin="0,5,0,10"/>
            
            <TextBlock Grid.Row="7" Text="Train Type:" FontWeight="Bold"/>
            <ComboBox Grid.Row="8" 
                      ItemsSource="{Binding TrainTypes}"
                      SelectedValue="{Binding NewTrainTypeId}"
                      SelectedValuePath="TrainTypeId"
                      DisplayMemberPath="TypeName"
                      Height="30" 
                      Margin="0,5,0,10"/>
            
            <TextBlock Grid.Row="9" Text="Route:" FontWeight="Bold"/>
            <ComboBox Grid.Row="10" 
                      ItemsSource="{Binding Routes}"
                      SelectedValue="{Binding NewRouteId}"
                      SelectedValuePath="RouteId"
                      DisplayMemberPath="RouteName"
                      Height="30" 
                      Margin="0,5,0,10"/>
            
            <TextBlock Grid.Row="11" Text="Priority:" FontWeight="Bold"/>
            <TextBox Grid.Row="12" 
                     Text="{Binding NewPriority, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" 
                     Margin="0,5,0,10"/>
            
            <CheckBox Grid.Row="13" 
                      IsChecked="{Binding NewIsForRoundTrip}"
                      Content="Round Trip Rule"
                      Margin="0,5,0,10"/>
            
            <CheckBox Grid.Row="14" 
                      IsChecked="{Binding NewIsActive}"
                      Content="Active"
                      Margin="0,5,0,10"/>
            
            <TextBlock Grid.Row="15" Text="Effective From Date:" FontWeight="Bold"/>
            <DatePicker Grid.Row="16" 
                        SelectedDate="{Binding NewEffectiveFromDate}"
                        Height="30" 
                        Margin="0,5,0,10"/>
            
            <TextBlock Grid.Row="17" Text="Effective To Date:" FontWeight="Bold"/>
            <DatePicker Grid.Row="18" 
                        SelectedDate="{Binding NewEffectiveToDate}"
                        Height="30" 
                        Margin="0,5,0,10"/>
            
            <TextBlock Grid.Row="19" Text="Applicable Date Start:" FontWeight="Bold"/>
            <DatePicker Grid.Row="20" 
                        SelectedDate="{Binding NewApplicableDateStart}"
                        Height="30" 
                        Margin="0,5,0,10"/>
            
            <TextBlock Grid.Row="21" Text="Applicable Date End:" FontWeight="Bold"/>
            <DatePicker Grid.Row="22" 
                        SelectedDate="{Binding NewApplicableDateEnd}"
                        Height="30" 
                        Margin="0,5,0,15"/>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Row="23" 
                        VerticalAlignment="Bottom">
                <Button Content="Add Rule" 
                        Command="{Binding AddPricingRuleCommand}"
                        Height="35" 
                        Margin="0,3"
                        Background="LightGreen"/>
                
                <Button Content="Update Rule" 
                        Command="{Binding UpdatePricingRuleCommand}"
                        Height="35" 
                        Margin="0,3"
                        Background="LightBlue"/>
                
                <Button Content="Toggle Active" 
                        Command="{Binding ToggleActiveCommand}"
                        Height="35" 
                        Margin="0,3"
                        Background="Orange"/>
                
                <Button Content="Delete Rule" 
                        Command="{Binding DeletePricingRuleCommand}"
                        Height="35" 
                        Margin="0,3"
                        Background="LightCoral"/>
                
                <Button Content="Clear Form" 
                        Command="{Binding ClearFormCommand}"
                        Height="35" 
                        Margin="0,3"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>