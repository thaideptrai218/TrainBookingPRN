<UserControl
    x:Class="TrainBookingApp.Views.Manager.RouteManagementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TrainBookingApp.Views.Manager">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Route List  -->
        <Grid Grid.Column="0" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Routes" />

            <!--  Search  -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox
                    Grid.Column="0"
                    Height="25"
                    Padding="3"
                    VerticalAlignment="Center"
                    Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" />

                <Button
                    Grid.Column="1"
                    Width="60"
                    Height="25"
                    Margin="5,0,0,0"
                    Command="{Binding SearchRoutesCommand}"
                    Content="Search" />
            </Grid>

            <DataGrid
                Grid.Row="2"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                ItemsSource="{Binding Routes}"
                SelectedItem="{Binding SelectedRoute}"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding RouteName}"
                        Header="Route Name" />
                    <DataGridTextColumn
                        Width="180"
                        Binding="{Binding Description}"
                        Header="Description" />
                </DataGrid.Columns>
            </DataGrid>

            <!--  Route Form  -->
            <StackPanel Grid.Row="3" Margin="0,10,0,0">
                <TextBlock FontWeight="Bold" Text="Route Name:" />
                <TextBox
                    Height="25"
                    Margin="0,3,0,8"
                    Text="{Binding NewRouteName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock FontWeight="Bold" Text="Description:" />
                <TextBox
                    Height="50"
                    Margin="0,3,0,10"
                    AcceptsReturn="True"
                    Text="{Binding NewRouteDescription, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <Button
                    Height="30"
                    Margin="0,2"
                    Background="LightGreen"
                    Command="{Binding AddRouteCommand}"
                    Content="Add Route" />

                <Button
                    Height="30"
                    Margin="0,2"
                    Background="LightBlue"
                    Command="{Binding UpdateRouteCommand}"
                    Content="Update Route" />

                <Button
                    Height="30"
                    Margin="0,2"
                    Background="LightCoral"
                    Command="{Binding DeleteRouteCommand}"
                    Content="Delete Route" />

                <Button
                    Height="30"
                    Margin="0,2"
                    Command="{Binding ClearFormCommand}"
                    Content="Clear Form" />
            </StackPanel>
        </Grid>

        <!--  Route Stations  -->
        <Grid Grid.Column="1" Margin="10,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Route Stations" />

            <DataGrid
                Grid.Row="1"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                ItemsSource="{Binding RouteStations}"
                SelectedItem="{Binding SelectedRouteStation}"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="40"
                        Binding="{Binding SequenceNumber}"
                        Header="Seq" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Station.StationName}"
                        Header="Station" />
                    <DataGridTextColumn
                        Width="60"
                        Binding="{Binding DistanceFromStart}"
                        Header="Distance" />
                    <DataGridTextColumn
                        Width="60"
                        Binding="{Binding DefaultStopTime}"
                        Header="Stop Time" />
                </DataGrid.Columns>
            </DataGrid>

            <Button
                Grid.Row="2"
                Height="30"
                Margin="0,10,0,0"
                Background="LightCoral"
                Command="{Binding RemoveStationFromRouteCommand}"
                Content="Remove Station" />
        </Grid>

        <!--  Available Stations  -->
        <Grid Grid.Column="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Available Stations" />

            <!--  Station Search  -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox
                    Grid.Column="0"
                    Height="25"
                    Padding="3"
                    VerticalAlignment="Center"
                    Text="{Binding StationSearchTerm, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="Search by station name, code, or city" />

                <Button
                    Grid.Column="1"
                    Width="60"
                    Height="25"
                    Margin="5,0,2,0"
                    Command="{Binding SearchStationsCommand}"
                    Content="Search" />

                <Button
                    Grid.Column="2"
                    Width="45"
                    Height="25"
                    Margin="2,0,0,0"
                    Command="{Binding ClearStationSearchCommand}"
                    Content="Clear" />
            </Grid>

            <DataGrid
                Grid.Row="2"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                ItemsSource="{Binding FilteredAvailableStations}"
                SelectedItem="{Binding SelectedAvailableStation}"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="50"
                        Binding="{Binding StationCode}"
                        Header="Code" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding StationName}"
                        Header="Name" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding City}"
                        Header="City" />
                </DataGrid.Columns>
            </DataGrid>

            <Button
                Grid.Row="3"
                Height="30"
                Margin="0,10,0,0"
                Background="LightGreen"
                Command="{Binding AddStationToRouteCommand}"
                Content="Add to Route" />
        </Grid>
    </Grid>
</UserControl>
