<UserControl x:Class="TrainBookingApp.Views.Manager.TrainManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TrainBookingApp.Views.Manager">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Train List -->
        <Grid Grid.Column="0" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       Text="Train List" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            
            <!-- Filter Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="All Trains" 
                        Command="{Binding ShowAllTrainsCommand}"
                        Width="80" 
                        Height="30"
                        Margin="0,0,10,0"/>
                
                <Button Content="Active Only" 
                        Command="{Binding ShowActiveTrainsCommand}"
                        Width="80" 
                        Height="30"
                        Background="LightGreen"/>
            </StackPanel>
            
            <!-- Search -->
            <Grid Grid.Row="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         Padding="5"
                         VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" 
                        Content="Search" 
                        Command="{Binding SearchTrainsCommand}"
                        Width="80" 
                        Height="30"
                        Margin="5,0,0,0"/>
            </Grid>
            
            <!-- Train DataGrid -->
            <DataGrid Grid.Row="3" 
                      ItemsSource="{Binding Trains}"
                      SelectedItem="{Binding SelectedTrain}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      SelectionChanged="TrainDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Train Name" Binding="{Binding TrainName}" Width="150"/>
                    <DataGridTextColumn Header="Train Type" Binding="{Binding TrainType.TypeName}" Width="120"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60"/>
                    <DataGridTextColumn Header="Avg. Velocity" Binding="{Binding TrainType.AverageVelocity}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <!-- Train Form -->
        <Grid Grid.Column="1" Margin="15,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       Text="Train Details" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>
            
            <TextBlock Grid.Row="1" Text="Train Name:" FontWeight="Bold"/>
            <TextBox Grid.Row="2" 
                     Text="{Binding NewTrainName, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" 
                     Margin="0,5,0,10"/>
            
            <TextBlock Grid.Row="3" Text="Train Type:" FontWeight="Bold"/>
            <ComboBox Grid.Row="4" 
                      ItemsSource="{Binding TrainTypes}"
                      SelectedItem="{Binding SelectedTrainType}"
                      DisplayMemberPath="TypeName"
                      Height="30" 
                      Margin="0,5,0,10"/>
            
            <CheckBox Grid.Row="5" 
                      IsChecked="{Binding NewIsActive}"
                      Content="Active"
                      FontWeight="Bold"
                      Margin="0,5,0,15"/>
            
            <!-- Train Action Buttons -->
            <StackPanel Grid.Row="8" 
                        VerticalAlignment="Bottom">
                <Button Content="Add Train" 
                        Command="{Binding AddTrainCommand}"
                        Height="35" 
                        Margin="0,5"
                        Background="LightGreen"/>
                
                <Button Content="Update Train" 
                        Command="{Binding UpdateTrainCommand}"
                        Height="35" 
                        Margin="0,5"
                        Background="LightBlue"/>
                
                <Button Content="Activate Train" 
                        Command="{Binding ActivateTrainCommand}"
                        Height="35" 
                        Margin="0,5"
                        Background="LightGreen"/>
                
                <Button Content="Deactivate Train" 
                        Command="{Binding DeactivateTrainCommand}"
                        Height="35" 
                        Margin="0,5"
                        Background="Orange"/>
                
                <Button Content="Delete Train" 
                        Command="{Binding DeleteTrainCommand}"
                        Height="35" 
                        Margin="0,5"
                        Background="LightCoral"/>
                
                <Button Content="Clear Form" 
                        Command="{Binding ClearFormCommand}"
                        Height="35" 
                        Margin="0,5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>