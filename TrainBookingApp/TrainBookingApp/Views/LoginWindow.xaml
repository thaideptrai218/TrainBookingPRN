<Window x:Class="TrainBookingApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TrainBookingApp.Views"
        Title="Train Booking System - Login" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Train Booking System" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Foreground="DarkBlue"/>
        
        <!-- Email Input -->
        <TextBlock Grid.Row="2" 
                   Text="Email Address:" 
                   FontWeight="Bold"/>
        
        <TextBox Grid.Row="4" 
                 Name="EmailTextBox"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="14"
                 Padding="5"
                 Height="30"/>
        
        <!-- Password Input -->
        <TextBlock Grid.Row="6" 
                   Text="Password:" 
                   FontWeight="Bold"/>
        
        <PasswordBox Grid.Row="8" 
                     Name="PasswordBox"
                     FontSize="14"
                     Padding="5"
                     Height="30"
                     PasswordChanged="PasswordBox_PasswordChanged"/>
        
        <!-- Error Message -->
        <TextBlock Grid.Row="10" 
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   FontWeight="Bold"
                   HorizontalAlignment="Center">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ErrorMessage}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="12" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            
            <Button Content="Login" 
                    Width="80" 
                    Height="35"
                    FontSize="14"
                    FontWeight="Bold"
                    Command="{Binding LoginCommand}"/>
            
            <Button Content="Register" 
                    Width="80" 
                    Height="35"
                    FontSize="14"
                    Margin="10,0,0,0"
                    Command="{Binding ShowRegisterCommand}"/>
            
        </StackPanel>
        
        <!-- Loading Indicator -->
        <Grid Grid.Row="0" 
              Grid.RowSpan="13" 
              Background="White"
              Opacity="0.8">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <TextBlock Text="Logging in..." 
                           FontSize="16" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Please wait..." 
                           FontSize="12" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>