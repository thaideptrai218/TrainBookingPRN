<Window
    x:Class="TrainBookingApp.Views.SeatSelectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Seat Selection"
    Width="800"
    Height="600"
    MinWidth="700"
    MinHeight="500"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="15"
            Background="DarkBlue">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Seat Selection" />
                    <TextBlock
                        FontSize="12"
                        Foreground="LightGray"
                        Text="{Binding SelectedTrip.Train.TrainName, StringFormat='Train: {0}'}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="LightGray"
                        Text="{Binding SelectedTrip.Route.RouteName, StringFormat='Route: {0}'}" />
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock
                        FontSize="14"
                        Foreground="White"
                        Text="{Binding PassengerCount, StringFormat='Passengers: {0}'}" />
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="Yellow"
                        Text="{Binding TotalPrice, StringFormat='Total: {0:C}'}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content  -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <!--  Coach Selection  -->
            <Border
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="10"
                Background="LightGray">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Select Coach" />

                    <ListBox
                        Height="200"
                        DisplayMemberPath="CoachName"
                        ItemsSource="{Binding Coaches}"
                        SelectedItem="{Binding SelectedCoach}" />

                    <Button
                        Height="30"
                        Margin="0,10,0,0"
                        Command="{Binding RefreshSeatsCommand}"
                        Content="Refresh Seats" />
                </StackPanel>
            </Border>

            <!--  Seat Layout  -->
            <Border
                Grid.Column="1"
                Padding="10"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{Binding SelectedCoach.CoachName, StringFormat='Coach: {0}'}" />

                        <!--  Seat Grid  -->
                        <ItemsControl ItemsSource="{Binding AvailableSeats}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel
                                        ItemHeight="60"
                                        ItemWidth="60"
                                        Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Width="50"
                                        Height="50"
                                        Margin="2"
                                        Background="LightGreen"
                                        Command="{Binding DataContext.SelectSeatCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Content="{Binding SeatName}"
                                        ToolTip="{Binding SeatType.TypeName}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!--  Selected Seats  -->
            <Border
                Grid.Column="2"
                Margin="10,0,0,0"
                Padding="10"
                Background="LightBlue">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Selected Seats" />

                    <ListBox Height="200" ItemsSource="{Binding SelectedSeats}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="40" Text="{Binding SeatName}" />
                                    <TextBlock
                                        Width="60"
                                        FontSize="10"
                                        Text="{Binding SeatType.TypeName}" />
                                    <Button
                                        Width="20"
                                        Height="20"
                                        Background="Red"
                                        Command="{Binding DataContext.UnselectSeatCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Content="X"
                                        FontSize="10"
                                        Foreground="White" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Margin="0,10,0,0" Text="{Binding SelectedSeats.Count, StringFormat='Selected: {0}'}" />
                    <TextBlock Text="{Binding PassengerCount, StringFormat='Required: {0}'}" />
                </StackPanel>
            </Border>
        </Grid>

        <!--  Legend  -->
        <Border
            Grid.Row="2"
            Padding="10"
            Background="WhiteSmoke">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                    <Rectangle
                        Width="20"
                        Height="20"
                        Margin="0,0,5,0"
                        Fill="LightGreen" />
                    <TextBlock VerticalAlignment="Center" Text="Available" />
                </StackPanel>
                <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                    <Rectangle
                        Width="20"
                        Height="20"
                        Margin="0,0,5,0"
                        Fill="LightBlue" />
                    <TextBlock VerticalAlignment="Center" Text="Selected" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle
                        Width="20"
                        Height="20"
                        Margin="0,0,5,0"
                        Fill="Gray" />
                    <TextBlock VerticalAlignment="Center" Text="Occupied" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!--  Action Buttons  -->
        <Grid Grid.Row="3" Background="WhiteSmoke">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontStyle="Italic"
                Text="{Binding StatusMessage}" />

            <Button
                Grid.Column="1"
                Width="100"
                Height="35"
                Margin="0,0,10,0"
                Background="LightCoral"
                Command="{Binding CancelSelectionCommand}"
                Content="Cancel" />

            <Button
                Grid.Column="2"
                Width="150"
                Height="35"
                Background="Green"
                Command="{Binding ProceedToBookingCommand}"
                Content="Proceed to Booking"
                FontWeight="Bold"
                Foreground="White" />
        </Grid>
    </Grid>
</Window>
