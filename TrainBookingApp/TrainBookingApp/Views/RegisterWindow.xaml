<Window
    x:Class="TrainBookingApp.Views.RegisterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TrainBookingApp.Views"
    Title="Train Booking System - Register"
    Width="500"
    Height="800"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="DarkBlue"
                Text="Create New Account" />

            <!--  Full Name  -->
            <TextBlock
                Grid.Row="2"
                FontWeight="Bold"
                Text="Full Name:" />

            <TextBox
                Grid.Row="4"
                Height="30"
                Padding="5"
                FontSize="14"
                Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Email  -->
            <TextBlock
                Grid.Row="6"
                FontWeight="Bold"
                Text="Email Address:" />

            <TextBox
                Grid.Row="8"
                Height="30"
                Padding="5"
                FontSize="14"
                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Phone Number  -->
            <TextBlock
                Grid.Row="10"
                FontWeight="Bold"
                Text="Phone Number:" />

            <TextBox
                Grid.Row="12"
                Height="30"
                Padding="5"
                FontSize="14"
                Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Password  -->
            <TextBlock
                Grid.Row="14"
                FontWeight="Bold"
                Text="Password:" />

            <PasswordBox
                Name="PasswordBox"
                Grid.Row="16"
                Height="30"
                Padding="5"
                FontSize="14"
                PasswordChanged="PasswordBox_PasswordChanged" />

            <!--  Confirm Password  -->
            <TextBlock
                Grid.Row="18"
                FontWeight="Bold"
                Text="Confirm Password:" />

            <PasswordBox
                Name="ConfirmPasswordBox"
                Grid.Row="20"
                Height="30"
                Padding="5"
                FontSize="14"
                PasswordChanged="ConfirmPasswordBox_PasswordChanged" />

            <!--  ID Card Number (Optional)  -->
            <TextBlock
                Grid.Row="22"
                FontWeight="Bold"
                Text="ID Card Number (Optional):" />

            <TextBox
                Grid.Row="24"
                Height="30"
                Padding="5"
                FontSize="14"
                Text="{Binding IdCardNumber, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Date of Birth (Optional)  -->
            <TextBlock
                Grid.Row="26"
                FontWeight="Bold"
                Text="Date of Birth (Optional):" />

            <DatePicker
                Name="DateOfBirthPicker"
                Grid.Row="28"
                Height="30"
                FontSize="14"
                SelectedDateChanged="DateOfBirthPicker_SelectedDateChanged" />

            <!--  Gender (Optional)  -->
            <TextBlock
                Grid.Row="30"
                FontWeight="Bold"
                Text="Gender (Optional):" />

            <ComboBox
                Grid.Row="32"
                Height="30"
                FontSize="14"
                SelectedValue="{Binding Gender, UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem Content="Male" />
                <ComboBoxItem Content="Female" />
                <ComboBoxItem Content="Other" />
            </ComboBox>

            <!--  Error Message  -->
            <TextBlock
                Grid.Row="34"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Foreground="Red"
                Text="{Binding ErrorMessage}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ErrorMessage}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!--  Buttons  -->
            <StackPanel
                Grid.Row="40"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <Button
                    Width="100"
                    Height="35"
                    Command="{Binding RegisterCommand}"
                    Content="Register"
                    FontSize="14"
                    FontWeight="Bold" />

                <Button
                    Width="100"
                    Height="35"
                    Margin="10,0,0,0"
                    Command="{Binding ShowLoginCommand}"
                    Content="Back to Login"
                    FontSize="14" />

            </StackPanel>

            <!--  Loading Indicator  -->
            <Grid
                Grid.Row="0"
                Grid.RowSpan="37"
                Background="White"
                Opacity="0.8">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Creating account..." />
                    <TextBlock
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Please wait..." />
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
